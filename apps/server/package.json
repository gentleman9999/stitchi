{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server",
    "dev:typecheck": "tsc --watch --noEmit",
    "start": "node dist/src/server",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build": "yarn clean && yarn codegen && tsc",
    "build:docker": "cd ../.. && docker build -t stitchi-server .",
    "codegen": "yarn codegen:prisma && yarn codegen:nexus",
    "codegen:prisma": "prisma generate",
    "codegen:nexus": "npx ts-node --transpile-only src/graphql/schema",
    "db:migrate": "npx prisma db push",
    "db:inspect": "npx prisma studio"
  },
  "devDependencies": {
    "@types/auth0": "^2.34.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/node-fetch": "^2.6.1",
    "config": "*",
    "prisma": "^3.11.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig": "*",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@apollo/federation": "^0.36.0",
    "@graphql-tools/stitch": "^8.6.2",
    "@graphql-tools/utils": "^8.6.5",
    "@graphql-tools/wrap": "^8.4.9",
    "@prisma/client": "^3.11.0",
    "apollo-graphql": "^0.9.5",
    "apollo-server": "^3.6.6",
    "auth0": "^2.40.0",
    "cloudinary": "^1.28.1",
    "dotenv": "^16.0.0",
    "graphql": "^16.3.0",
    "graphql-relay": "^0.10.0",
    "graphql-scalars": "^1.15.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "nexus": "^1.3.0",
    "slugify": "^1.6.5",
    "yup": "^0.32.11"
  }
}
