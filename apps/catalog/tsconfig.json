{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2020", // or higher
    "module": "CommonJS",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["esnext"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
